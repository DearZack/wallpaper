		<item name="android:textCursorDrawable">?android:attr/colorControlHighlight</item>
		<item name="android:textSelectHandle">?android:attr/colorControlHighlight</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:background">@android:color/transparent</item>
	</style>
	<style name="dialog" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
	</style>
	<style name="dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>-->
</resources>
