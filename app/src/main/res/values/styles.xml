<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="parent">
		</style>
	<style name="parent" parent="Theme.AppCompat.Light">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="colorPrimary">@color/primary</item>  
		<!--  toolbar颜色 -->  
		<item name="colorPrimaryDark">@color/primary</item>  
		<!--  状态栏颜色 -->  
		<item name="colorAccent">@color/accent</item> 
		<!-- 选中背景色 -->
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@color/primary</item>
		<item name="android:textColorPrimary">@color/primary_text</item>
		<item name="android:textColorSecondary">@color/secondary_text</item>
		<item name="colorControlNormal">@color/accent</item>
		<item name="colorControlHighlight">@color/primary_light</item>
		<item name="colorControlActivated">@color/primary</item>
		<item name="android:listDivider">@color/divider</item>
		<item name="android:dividerHeight">1dp</item>
		<item name="preferenceTheme">@style/preference</item>
		<!--<item name="preferenceStyle">@style/preference</item>
		-->
		<item name="cardElevation">2px</item>
		<!--<item name="android:windowBackground">@color/window_background</item>-->
		<item name="sizeTitle">@dimen/title</item>
		<item name="sizeSummary">@dimen/summary</item>
		<item name="sizeTip">@dimen/tip</item>
		<item name="actionMenuTextColor">@color/icons</item>
		<item name="colorIcons">@color/icons</item>
		</style>
	<style name="preference" parent="parent">
		<item name="preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
		<item name="preferenceFragmentStyle">@style/PreferenceFragment</item>
		<!--<item name="preferenceCategoryStyle">@style/Preference.Category</item>
		--> 
		<item name="preferenceStyle">@style/Preference</item>
		<item name="preferenceInformationStyle">@style/Preference.Information</item>
		<item name="checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
		<item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
		<item name="dialogPreferenceStyle">@style/Preference.DialogPreference</item>
		<item name="editTextPreferenceStyle">@style/Preference.DialogPreference.EditTextPreference</item>
		<!--<item name="preferenceFragmentListStyle">@style/PreferenceFragmentList</item>-->
		</style>
	<style name="listStyle">
		<item
			name="android:background">?attr/selectableItemBackground</item>
	</style>
	<style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">true</item>
		<item name="color">@color/icons</item>
	</style>
	<style name="FloatActivity" parent="AppTheme">
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowAnimationStyle">@style/activityAnime</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
	<style name="ViewImage" parent="@style/FloatActivity">
		<item name="android:windowAnimationStyle">@style/ViewImageAnime</item>
		<item name="android:windowBackground">@android:color/black</item>
	</style>
	<style name="activityAnime">
		<item name="android:activityOpenEnterAnimation">@null</item> 
		<item name="android:activityOpenExitAnimation">@null</item> 
		<item name="android:activityCloseEnterAnimation">@null</item> 
		<item name="android:activityCloseExitAnimation">@null</item> 
		<item name="android:taskOpenEnterAnimation">@null</item> 
		<item name="android:taskOpenExitAnimation">@null</item> 
		<item name="android:taskCloseEnterAnimation">@null</item> 
		<item name="android:taskCloseExitAnimation">@null</item> 
		<item name="android:taskToFrontEnterAnimation">@null</item> 
		<item name="android:taskToFrontExitAnimation">@null</item> 
		<item name="android:taskToBackEnterAnimation">@null</item> 
		<item name="android:taskToBackExitAnimation">@null</item> 
		<item name="android:windowEnterAnimation">@anim/window_enter</item>
		<item name="android:windowExitAnimation">@anim/window_exit</item>

	</style>
	<style name="ViewImageAnime" parent="activityAnime">
		<item name="android:windowEnterAnimation">@anim/scale_in</item>
		<item name="android:windowExitAnimation">@anim/scale_out</item>
		
	</style>
	<style name="toolbar" parent="AppTheme">
		<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
		<item name="colorControlNormal">@color/icons</item>
		<item name="titleTextColor">@color/icons</item>
		<item name="subtitleTextColor">@color/icons</item>
		<item name="colorAccent">@color/icons</item>
		<item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
		</style>
	<style name="WhiteIcons" parent="AppTheme">
		<item name="colorControlNormal">@color/icons</item>
		
	</style>
